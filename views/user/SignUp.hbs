<h3>{{viewTitle}}</h3>
<form action="/user" method="POST" autocomplete="off">
 <div class="form-group">
        <label for="">Full Name</label>
        <input type="text" class="form-control"name="fullname" placeholder="Full Name" value="{{user.fullname}}">
        <div class="text-danger">{{user.fullnameError}}</div>
    </div>
    <div class="form-group">
        <label for="">password</label>
        <input type="password" class="form-control"name="password" placeholder="password" value="{{user.password}}">
        <div class="text-danger">{{user.passwordError}}</div>
        <button type="submit" class="btn btn-info"><i class="fa fa-database"></i>register</button>
        <a class="btn tbn-secondary" href="/user/login"><i class="fa fa-list-alt"></i>login</a>
    </div>
</form>